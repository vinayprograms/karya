# Karya Task Management Configuration
# Supports structured/unstructured project layouts and field-specific filtering

# Required: Root directory for projects
prjdir = "/path/to/your/projects"

# Optional: Zettelkasten directory (for zet command)
# zetdir = "/path/to/zettelkasten"

# Optional: Editor (defaults to vim)
# editor = "nvim"

# Optional: Karya directory for inbox (defaults to prjdir)
# karya_dir = "/path/to/karya"

# Optional: Show completed tasks in TUI (defaults to false)
# show_completed = true

# Optional: Use structured zettelkasten format (defaults to true)
# structured = true
# - true: Search for project/notes/zettelID/README.md files (zettelkasten format)
# - false: Search all .md files in project directory tree (unstructured)

# Optional: Show additional details like Zettel ID column in table view (defaults to false)
# verbose = true
# Note: -v/--verbose command-line flag takes precedence over this setting

# ============================================================================
# KEYWORDS CONFIGURATION
# ============================================================================
# Customize task state detection by defining keyword lists.
# Keywords are case-sensitive and matched against task markers (e.g., "TODO:", "DOING:").
#
# [keywords]
# active = [
#     "TODO", "TASK", "NOTE", "REMINDER", "EVENT", "MEETING",
#     "CALL", "EMAIL", "MESSAGE", "FOLLOWUP", "REVIEW",
#     "CHECKIN", "CHECKOUT", "RESEARCH", "READING", "WRITING",
#     "DRAFT", "FINALIZE", "SUBMIT", "PRESENTATION"
# ]
#
# inprogress = [
#     "DOING", "EDITING", "INPROGRESS", "WIP", "WORKING", "STARTED",
#     "WAITING", "DEFERRED", "DELEGATED"
# ]
#
# completed = [
#     "ARCHIVED", "CANCELED", "DELETED", "DONE", "COMPLETED", "CLOSED"
# ]

# ============================================================================
# COLOR CONFIGURATION (Terminal UI colors for todo command)
# ============================================================================
# You can specify colors using three different methods:
#   1. Color names (ANSI 16-color palette) - recommended for readability
#   2. ANSI numbers (0-15) - for exact ANSI 16-color control
#   3. Hex colors (#RRGGBB) - for full RGB color range (terminal permitting)
#

#
# Color mode for terminal: "light" or "dark". Empty/unset defaults to dark
# Can also be set via environment variable: KARYA_COLOR_MODE=light|dark
#
# color_mode = "dark"
#
# Individual color overrides (use color names, ANSI numbers 0-15, or hex colors):
# Supported Color Names (ANSI 16-Color Palette):
#   Basic:   black, red, green, yellow, blue, magenta, cyan, white
#   Bright:  bright-red, bright-green, bright-yellow, bright-blue,
#            bright-magenta, bright-cyan, bright-black, bright-white
# Reference: https://en.wikipedia.org/wiki/ANSI_escape_code#8-bit
# 
# Hex colors are also supported.
#
# [colors]
# project           = "green"                 # Color name example
# active            = "yellow"                # Color name example
# inprogress        = "6"                     # ANSI number example (cyan)
# completed         = "gray"                  # Alias for bright-black
# description       = "#E8F4F8"               # Hex colors are supported
# completed-description = "gray"              # Completed task text (faded)
# tag               = "bright-white"         # Tag badge text
# tag-bg            = "black"                 # Tag badge background
# date              = "yellow"                # Scheduled date color
# date-bg           = "black"                 # Scheduled date background
# past-date         = "red"                   # Past/overdue date (warning)
# past-bg           = "black"                 # Past date background
# today-date        = "black"                 # Today's date text
# today-bg          = "yellow"                # Today's date background (highlight)
# assignee          = "bright-white"         # Assignee badge text
# assignee-bg       = "black"                 # Assignee badge background

# ============================================================================
# ENHANCED FILTERING CAPABILITIES
# ============================================================================
# The todo command supports field-specific filtering. In interactive mode,
# press '/' to enter filter mode and use these patterns:
#
# General text search:
#   authentication     # Search across all task fields
#
# Field-specific search:
#   >> alice          # Filter by assignee (tasks assigned to "alice")
#   #urgent           # Filter by tag (tasks with "#urgent" tag)
#   @2025-01-15      # Filter by scheduled date (equivalent to @s:2025-01-15)
#   @s:2025-01-15    # Filter by explicit scheduled date
#   @d:2025-01-20    # Filter by due date
#
# Task format examples:
#   TODO: Fix login bug #urgent @s:2025-01-15 @d:2025-01-20 >> alice
#   PROGRESS: Write docs #documentation @2025-01-10 >> bob
#   DONE: Setup project #setup @2025-01-01 >> charlie
#
# Date fields:
#   @date        →  Scheduled date (when to start/work on task)
#   @s:date      →  Explicit scheduled date (same as @date)  
#   @d:date      →  Due date (when task must be completed)
